<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272525"
    android:padding="15dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainPanel"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#D1E3A7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textInputExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 + 66 - √42"
            app:layout_constraintBottom_toBottomOf="@id/mainPanel"
            app:layout_constraintEnd_toEndOf="@id/mainPanel"
            android:textStyle="bold"
            android:textSize="50dp"
            android:textColorHint="@color/black"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mainPanel"
        app:layout_constraintStart_toStartOf="@id/mainPanel"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="@dimen/width"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_C"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/red"
            android:text="С"
            android:textStyle="bold"
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_plus_minus"
            android:layout_width="70dp"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/brown"
            android:text="+/-"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_root"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="√"
            android:textStyle="bold"
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_power"
            android:layout_width="70dp"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="x^y"
            android:textStyle="bold"
            android:textSize="15dp"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_percent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="%"
            android:textStyle="bold"
            android:textSize="15dp"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_plus"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="+"
            android:textSize="20sp"
            app:cornerRadius="5dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="@dimen/width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="7dp">

        <Button
            android:id="@+id/button_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/dark_gray"
            android:text="1"
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/dark_gray"
            android:text="3"
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/dark_gray"
            android:text="5"
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/dark_gray"
            android:text="7"
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/dark_gray"
            android:text="9"
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_opening_bracket"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/dark_gray"
            android:text="("
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_minus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="-"
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="@dimen/width"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="7dp">

        <Button
            android:id="@+id/button_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/dark_gray"
            android:text="2"
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/dark_gray"
            android:text="4"
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/dark_gray"
            android:text="6"
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/dark_gray"
            android:text="8"
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/dark_gray"
            android:text="0"
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_closing_parenthesis"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/dark_gray"
            android:text=")"
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/button_multiplication"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="х"
            android:textSize="@dimen/textSize"
            app:cornerRadius="5dp" />
    </LinearLayout>
</LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mainPanel"
        app:layout_constraintStart_toEndOf="@id/layout1"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/layout3"
            app:layout_constraintStart_toStartOf="@id/layout3">

            <LinearLayout
                android:id="@+id/line1_2"
                android:layout_width="@dimen/widthSmallButton"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="5dp">

                <Button
                    android:id="@+id/button_2_1"
                    android:layout_width="@dimen/widthSmallButton"
                    android:layout_height="@dimen/heightSmallButton"
                    android:textSize="@dimen/textSize"
                    android:text="1"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="7dp" />
                <Button
                    android:id="@+id/button_2_4"
                    android:layout_width="@dimen/widthSmallButton"
                    android:layout_height="@dimen/heightSmallButton"
                    android:textSize="@dimen/textSize"
                    android:text="4"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="7dp" />
                <Button
                    android:id="@+id/button_2_7"
                    android:layout_width="@dimen/widthSmallButton"
                    android:layout_height="@dimen/heightSmallButton"
                    android:textSize="@dimen/textSize"
                    android:text="7"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="7dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2_2"
                android:layout_width="@dimen/widthSmallButton"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="5dp">

                <Button
                    android:id="@+id/button_2_2"
                    android:layout_width="@dimen/widthSmallButton"
                    android:layout_height="@dimen/heightSmallButton"
                    android:textSize="@dimen/textSize"
                    android:text="2"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="7dp" />
                <Button
                    android:id="@+id/button_2_5"
                    android:layout_width="@dimen/widthSmallButton"
                    android:layout_height="@dimen/heightSmallButton"
                    android:textSize="@dimen/textSize"
                    android:text="5"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="7dp" />
                <Button
                    android:id="@+id/button_2_8"
                    android:layout_width="@dimen/widthSmallButton"
                    android:layout_height="@dimen/heightSmallButton"
                    android:textSize="@dimen/textSize"
                    android:text="8"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="7dp" />
            </LinearLayout>


        <LinearLayout
            android:id="@+id/line_3_2"
            android:layout_width="@dimen/widthSmallButton"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp">

            <Button
                android:id="@+id/button_2_3"
                android:layout_width="@dimen/widthSmallButton"
                android:layout_height="@dimen/heightSmallButton"
                android:textSize="@dimen/textSize"
                android:text="3"
                android:textColor="@color/black"
                android:gravity="center"
                android:backgroundTint="@color/white"
                app:cornerRadius="7dp" />
            <Button
                android:id="@+id/button_2_6"
                android:layout_width="@dimen/widthSmallButton"
                android:layout_height="@dimen/heightSmallButton"
                android:textSize="@dimen/textSize"
                android:text="6"
                android:textColor="@color/black"
                android:gravity="center"
                android:backgroundTint="@color/white"
                app:cornerRadius="7dp" />
            <Button
                android:id="@+id/button_2_9"
                android:layout_width="@dimen/widthSmallButton"
                android:layout_height="@dimen/heightSmallButton"
                android:textSize="@dimen/textSize"
                android:text="9"
                android:textColor="@color/black"
                android:gravity="center"
                android:backgroundTint="@color/white"
                app:cornerRadius="7dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/layout2"
        app:layout_constraintStart_toStartOf="@id/layout2">

        <Button
            android:id="@+id/button_2_0"
            android:layout_width="@dimen/widthSmallButton"
            android:layout_height="@dimen/heightSmallButton"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize"
            app:cornerRadius="7dp" />

        <Button
            android:id="@+id/button_2_strelka"
            android:layout_width="125dp"
            android:layout_height="@dimen/heightSmallButton"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:text="⇦"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize"
            android:textStyle="bold"
            app:cornerRadius="7dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/lineWhite"
        android:layout_width="210dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/line_4"
        app:layout_constraintStart_toStartOf="@id/line_4"
        android:layout_marginTop="5dp"
        android:background="@color/white"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout3"
        app:layout_constraintStart_toStartOf="@id/layout3"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/layout4"
            app:layout_constraintStart_toStartOf="@id/layout4">

            <LinearLayout
                android:id="@+id/line_3_1"
                android:layout_width="@dimen/widthSmallButton"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_3_1"
                    android:layout_width="@dimen/widthSmallButton"
                    android:layout_height="@dimen/heightSmallButton"
                    android:backgroundTint="@color/white"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize"
                    app:cornerRadius="7dp" />
                <Button
                    android:id="@+id/button_3_4"
                    android:layout_width="@dimen/widthSmallButton"
                    android:layout_height="@dimen/heightSmallButton"
                    android:textSize="@dimen/textSize"
                    android:text="4"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="7dp" />
                <Button
                    android:id="@+id/button_3_7"
                    android:layout_width="@dimen/widthSmallButton"
                    android:layout_height="@dimen/heightSmallButton"
                    android:textSize="@dimen/textSize"
                    android:text="7"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="7dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_3_4"
                android:layout_width="@dimen/widthSmallButton"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="5dp">

                <Button
                    android:id="@+id/button_3_2"
                    android:layout_width="@dimen/widthSmallButton"
                    android:layout_height="@dimen/heightSmallButton"
                    android:textSize="@dimen/textSize"
                    android:text="2"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="7dp" />
                <Button
                    android:id="@+id/button_3_5"
                    android:layout_width="@dimen/widthSmallButton"
                    android:layout_height="@dimen/heightSmallButton"
                    android:textSize="@dimen/textSize"
                    android:text="5"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="7dp" />
                <Button
                    android:id="@+id/button_3_8"
                    android:layout_width="@dimen/widthSmallButton"
                    android:layout_height="@dimen/heightSmallButton"
                    android:textSize="@dimen/textSize"
                    android:text="8"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="7dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/line_3_3"
                android:layout_width="@dimen/widthSmallButton"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="5dp">

                <Button
                    android:id="@+id/button_3_3"
                    android:layout_width="@dimen/widthSmallButton"
                    android:layout_height="@dimen/heightSmallButton"
                    android:textSize="@dimen/textSize"
                    android:text="3"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="7dp" />
                <Button
                    android:id="@+id/button_3_6"
                    android:layout_width="@dimen/widthSmallButton"
                    android:layout_height="@dimen/heightSmallButton"
                    android:textSize="@dimen/textSize"
                    android:text="6"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="7dp" />
                <Button
                    android:id="@+id/button_3_9"
                    android:layout_width="@dimen/widthSmallButton"
                    android:layout_height="@dimen/heightSmallButton"
                    android:textSize="@dimen/textSize"
                    android:text="9"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="7dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/layout5"
            app:layout_constraintStart_toStartOf="@id/layout5">

            <Button
                android:id="@+id/button_3_0"
                android:layout_width="@dimen/widthSmallButton"
                android:layout_height="@dimen/heightSmallButton"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize"
                app:cornerRadius="7dp" />

            <Button
                android:id="@+id/button_3_strelka"
                android:layout_width="125dp"
                android:layout_height="@dimen/heightSmallButton"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:text="⇦"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize"
                android:textStyle="bold"
                app:cornerRadius="7dp" />
        </LinearLayout>

        <Button
            android:id="@+id/button_division"
            android:layout_width="58dp"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/gray"
            android:textColor="@color/black"
            android:text="÷"
            android:textSize="30dp"
            app:cornerRadius="5dp"
            app:layout_constraintStart_toStartOf="@id/line_5"
            app:layout_constraintTop_toBottomOf="@id/line_5"/>

        <Button
            android:id="@+id/button_3_equal"
            android:layout_width="125dp"
            android:layout_height="@dimen/widthBigButton"
            android:backgroundTint="@color/orange"
            android:gravity="center"
            android:text="="
            android:textColor="@color/black"
            android:textSize="@dimen/textSize"
            app:layout_constraintEnd_toEndOf="@id/line_5"
            app:layout_constraintTop_toBottomOf="@id/line_5"
            android:textStyle="bold"
            app:cornerRadius="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>